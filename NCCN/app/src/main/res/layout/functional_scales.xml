<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/functional_scales_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/functional_scales"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/textAppearanceLabelLargeSub" />

    <TextView
        android:id="@+id/physical_functioning_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/functional_scales_heading"
        android:text="@string/physical_functioning"
        android:textColor="@color/colorGrey"
        android:textSize="@dimen/textAppearanceLabelLargeSub" />

    <TextView
        android:id="@+id/physical_functioning_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/functional_scales_heading"
        android:layout_marginLeft="10dp"
        android:layout_toLeftOf="@+id/physical_functioning_status_img"
        android:text="0"
        android:textColor="@color/colorGrey"
        android:textSize="@dimen/textAppearanceLabelLargeSub" />

    <ImageView
        android:id="@+id/physical_functioning_status_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/functional_scales_heading"
        android:layout_marginLeft="10dp"
        android:paddingTop="5dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_check_circle_black_24dp" />

    <View
        android:id="@+id/separator20"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/physical_functioning_status_img"
        android:layout_marginTop="10dp"
        android:background="#c0c0c0" />

    <!-- role_functioning Rollenfunktion -->
    <TextView
        android:id="@+id/role_functioning_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
