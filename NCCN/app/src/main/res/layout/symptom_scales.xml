<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/symptom_scales_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/symptom_scales"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/textAppearanceLabelLargeSub" />

    <TextView
        android:id="@+id/fatigue_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/symptom_scales_heading"
        android:text="@string/fatigue"
        android:textColor="@color/colorGrey"
        android:textSize="@dimen/textAppearanceLabelLargeSub" />

    <TextView
        android:id="@+id/fatigue_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/symptom_scales_heading"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/fatigue_txt"
        android:text="0"
        android:textColor="@color/colorGrey"
        android:textSize="@dimen/textAppearanceLabelLargeSub" />

    <ImageView
        android:id="@+id/fatigue_status_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/symptom_scales_heading"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/fatigue_score"
        android:src="@drawable/ic_check_circle_black_24dp" />

    <View
        android:id="@+id/separator1"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/fatigue_status_img"
        android:layout_margin="5dp"
        android:background="#c0c0c0" />

    <!-- nausea and vomiting -->
    <TextView
        android:id="@+id/nausea_and_vomiting_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/separator1"
        android:text="@string/nausea_and_vomiting"
        android:textColor="@color/colorGrey"
        android:textSize="@dimen/textAppearanceLabelLargeSub" />

    <TextView
        android:id="@+id/nausea_and_vomiting_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/separator1"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/nausea_and_vomiting_txt"
        android:text="0"
        android:textColor="@color/colorGrey"
        android:textSize="@dimen/textAppearanceLabelLargeSub" />

    <ImageView
        android:id="@+id/nausea_and_vomiting_status_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/separator1"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/nausea_and_vomiting_score"
        android:src="@drawable/ic_check_circle_black_24dp" />

    <View
        android:id="@+id/separator2"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/nausea_and_vomiting_status_img"
        android:layout_margin="5dp"
        android:background="#c0c0c0" />

    <!-- pain -->
    <TextView
        android:id="@+id/pain_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/separator2"
        android:text="@string/pain"
        android:textColor="@color/colorGrey"
        android:textSize="@dimen/textAppearanceLabelLargeSub" />

    <TextView
